<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bkg"
    android:elevation="0dp"
    android:id="@+id/account"
    tools:context=".passenger.PassengerAccountActivity">


    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_layout" />


    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="209dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp"
        android:background="@drawable/whitish_background"
        android:backgroundTint="#090909">

        <ImageView
            android:id="@+id/profileImg"
            android:layout_width="131dp"
            android:layout_height="169dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:elevation="5dp"
            app:srcCompat="@drawable/profile_default" />

        <LinearLayout
            android:layout_width="239dp"
            android:layout_height="182dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/white_background"
            android:elevation="3dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/userProfile2"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_marginTop="2dp"
                android:background="#FFFFFF"
                android:clickable="true"
                android:elevation="0dp"
                android:fadingEdge="vertical"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="33dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="11dp"
                    android:clickable="false"
                    android:text="User: "
                    android:textColor="#80000000"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txtUser"
                    android:layout_width="wrap_content"
                    android:layout_height="33dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="11dp"
                    android:clickable="false"
                    android:textColor="#574A46"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="330dp"
                android:layout_height="43dp"
                android:layout_marginTop="2dp"
                android:background="#FFFFFF"
                android:elevation="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="33dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="11dp"
                    android:clickable="false"
                    android:text="Email: "
                    android:textColor="#80000000"
                    android:textSize="14sp" />


                <TextView
                    android:id="@+id/txtEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="33dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="11dp"
                    android:clickable="false"
                    android:textColor="#574A46"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="330dp"
                android:layout_height="43dp"
                android:layout_marginTop="2dp"
                android:background="#FBFBFB"
                android:elevation="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="33dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="11dp"
                    android:clickable="false"
                    android:text="Phone: "

                    android:textColor="#7E000000"
                    android:textSize="14sp" />


                <TextView
                    android:id="@+id/txtPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="33dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="11dp"
                    android:clickable="false"
                    android:textColor="#574A46"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="330dp"
                android:layout_height="43dp"
                android:layout_marginTop="2dp"
                android:background="#FBFBFB"
                android:elevation="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="33dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="11dp"
                    android:clickable="false"
                    android:text="Address: "
                    android:textColor="#7E000000"
                    android:textSize="11sp" />


                <TextView
                    android:id="@+id/txtAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="33dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="11dp"
                    android:clickable="false"
                    android:textColor="#574A46"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="392dp"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="400dp"
        android:background="@drawable/black_layout"
        android:elevation="3dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/userProfile"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_marginTop="1dp"
            android:background="#1B1A19"
            android:clickable="true"
            android:elevation="20dp"
            android:fadingEdge="vertical"
            android:visibility="visible">


            <ImageView
                android:id="@+id/iconProfile"
                android:layout_width="42dp"
                android:layout_height="34dp"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="7dp"
                app:srcCompat="@drawable/icon_profile2" />

            <TextView
                android:layout_width="182dp"
                android:layout_height="33dp"
                android:layout_marginTop="11dp"
                android:clickable="false"
                android:text="USER PROFILE"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_marginTop="2dp"
            android:background="#000000"
            android:elevation="20dp">

            <ImageView
                android:id="@+id/iconRoutes"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:textAlignment="center"
                app:srcCompat="@drawable/routes" />

            <TextView
                android:layout_width="214dp"
                android:layout_height="33dp"
                android:layout_marginTop="11dp"
                android:text="FAVOURITE ROUTES"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/financialCard"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_marginTop="2dp"
            android:background="#1B1A19"
            android:elevation="20dp">

            <ImageView
                android:id="@+id/iconReports"
                android:layout_width="49dp"
                android:layout_height="31dp"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="7dp"
                app:srcCompat="@drawable/wallet" />

            <TextView
                android:layout_width="189dp"
                android:layout_height="43dp"
                android:layout_marginTop="11dp"
                android:text="FINANCIAL CARD"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/reports"
            android:layout_width="423dp"
            android:layout_height="43dp"
            android:layout_marginTop="2dp"
            android:background="#000000"
            android:elevation="20dp">

            <ImageView
                android:id="@+id/walletIcon"
                android:layout_width="53dp"
                android:layout_height="29dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="7dp"
                app:srcCompat="@drawable/reports" />

            <TextView
                android:layout_width="120dp"
                android:layout_height="29dp"
                android:layout_marginTop="11dp"
                android:text="REPORTS"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </LinearLayout>


    </LinearLayout>



    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/whitish_background" />
</RelativeLayout>