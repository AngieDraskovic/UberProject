<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLinear"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/whatsapp_background"
    tools:context=".passenger.MessageDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#00a884"
        android:layout_marginBottom="20dp">
        <ImageView
            android:id="@+id/chatHeaderProfileIcon"
            android:layout_width="43dp"
            android:layout_height="48dp"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="10dp"
            android:background="#00a884"
            android:scaleType="centerCrop"
            android:src="@drawable/profile1" />
        <TextView
            android:id="@+id/chatHeaderUser"
            android:layout_width="match_parent"
            android:background="#00a884"
            android:layout_height="45dp"
            android:textColor="@color/white"
            android:paddingTop="4dp"
            android:paddingLeft="17dp"
            android:layout_marginBottom="20dp"
            android:textSize="27sp"
            android:text="Ana Draskovic"
            android:textStyle="bold"/>
    </LinearLayout>




</LinearLayout>