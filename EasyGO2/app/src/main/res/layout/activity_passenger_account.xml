<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bkg"
    android:elevation="10dp"
    tools:context=".passenger.PassengerAccountActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_layout" />

    <TextView
        android:layout_width="199dp"
        android:layout_height="37dp"
        android:layout_below="@+id/imageView3"
        android:layout_alignStart="@+id/imageView3"
        android:layout_alignEnd="@+id/imageView3"
        android:layout_marginStart="10dp"
        android:layout_marginTop="-4dp"
        android:layout_marginEnd="-5dp"
        android:backgroundTint="@color/white"
        android:text="LARISA SAVIC"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="203dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView3"
        android:layout_alignStart="@+id/imageView3"
        android:layout_alignEnd="@+id/imageView3"
        android:layout_marginStart="1dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="-3dp"
        android:text="larisasavic@gmail.com"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="17sp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="204dp"
        android:layout_height="181dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:elevation="5dp"
        app:srcCompat="@drawable/profile1" />


    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="308dp"
        android:layout_below="@+id/imageView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:background="@drawable/white_background"
        android:elevation="3dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="21dp"
            android:background="#CDFFFFFF"
            android:elevation="20dp"
            android:fadingEdge="vertical"
            android:visibility="visible">

            <ImageView
                android:id="@+id/iconProfile"
                android:layout_width="49dp"
                android:layout_height="45dp"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="7dp"
                app:srcCompat="@drawable/icon_profile2" />

            <TextView
                android:layout_width="177dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:text="EDIT PROFILE"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="23sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="330dp"
            android:layout_height="52dp"
            android:layout_marginTop="17dp"
            android:background="#CBFFFFFF"
            android:elevation="20dp">

            <ImageView
                android:id="@+id/iconRoutes"
                android:layout_width="55dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:textAlignment="center"
                app:srcCompat="@drawable/routes" />

            <TextView
                android:layout_width="223dp"
                android:layout_height="33dp"
                android:layout_marginTop="11dp"
                android:text="FAVOURITE ROUTES"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="21sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="330dp"
            android:layout_height="52dp"
            android:layout_marginTop="17dp"
            android:background="#CBFFFFFF"
            android:elevation="20dp">

            <ImageView
                android:id="@+id/iconReports"
                android:layout_width="49dp"
                android:layout_height="43dp"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="7dp"
                app:srcCompat="@drawable/wallet" />

            <TextView
                android:layout_width="220dp"
                android:layout_height="36dp"
                android:layout_marginTop="11dp"
                android:text="FINANCIAL CARD"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="23sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="330dp"
            android:layout_height="52dp"
            android:layout_marginTop="17dp"
            android:background="#CDFFFFFF"
            android:elevation="20dp">

            <ImageView
                android:id="@+id/walletIcon"
                android:layout_width="58dp"
                android:layout_height="44dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="7dp"
                app:srcCompat="@drawable/reports" />

            <TextView
                android:layout_width="128dp"
                android:layout_height="38dp"
                android:layout_marginTop="11dp"
                android:text="REPORTS"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="23sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>