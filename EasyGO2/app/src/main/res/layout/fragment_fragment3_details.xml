<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    tools:context=".passenger.rideorder.Fragment3Details">


    <RelativeLayout
        android:id="@+id/detailsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="20dp">

        <TextView
            android:id="@+id/VehicleDetailsLbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Vehicle details"
            android:textSize="40dp"
            android:layout_marginBottom="30dp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/selectVehicleLbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/VehicleDetailsLbl"
            android:text="Vehicle name:"
            android:textSize="20dp"
            android:textColor="@color/white"/>

        <Spinner
            android:id="@+id/vehicle_spinner"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_below="@id/selectVehicleLbl"
            android:entries="@array/vehicle_options"
            android:prompt="@string/vehicle_prompt"
            android:backgroundTint="@color/white"
            android:background="@color/black"
            android:textColor="@color/white"/>

        <CheckBox
            android:id="@+id/baby_transport_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/vehicle_spinner"
            android:text="@string/baby_transport"
            android:textColor="@color/white"
            android:buttonTint="@color/white"/>

        <CheckBox
            android:id="@+id/pet_transport_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/baby_transport_checkbox"
            android:text="@string/pet_transport"
            android:textColor="@color/white"
            android:buttonTint="@color/white"/>

    </RelativeLayout>

    <Button
        android:id="@+id/submitBtnDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/detailsLayout"
        android:layout_centerHorizontal="true"
        android:text="Submit"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/gray"
        android:textColor="@color/white"
        />


</RelativeLayout>
